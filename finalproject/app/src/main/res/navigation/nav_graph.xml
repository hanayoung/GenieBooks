<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ssafy.finalproject.ui.home.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.ssafy.finalproject.ui.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_categoryDetailFragment"
            app:destination="@id/categoryDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.ssafy.finalproject.ui.mypage.MyPageFragment"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ssafy.finalproject.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_joinFragment"
            app:destination="@id/joinFragment" />
    </fragment>
    <fragment
        android:id="@+id/joinFragment"
        android:name="com.ssafy.finalproject.ui.join.JoinFragment"
        android:label="JoinFragment" >
        <action
            android:id="@+id/action_joinFragment_to_joinCategoryFragment"
            app:destination="@id/joinCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/joinCategoryFragment"
        android:name="com.ssafy.finalproject.ui.joincategory.JoinCategoryFragment"
        android:label="JoinCategoryFragment" >
        <argument
            android:name="customer"
            app:argType="com.ssafy.finalproject.data.model.dto.Customer" />
        <action
            android:id="@+id/action_joinCategoryFragment_to_loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryDetailFragment"
        android:name="com.ssafy.finalproject.ui.categorydetail.CategoryDetailFragment"
        android:label="CategoryDetailFragment" >
        <argument
            android:name="category"
            app:argType="string" />
        <argument
            android:name="categoryKr"
            app:argType="string" />
    </fragment>
</navigation>